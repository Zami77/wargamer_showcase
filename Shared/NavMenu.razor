<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Wargamer Showcase</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
            <NavLink class="nav-link" href="/community" Match="NavLinkMatch.All">
                <span class="oi oi-book" aria-hidden="true"></span> Community
            </NavLink>
            <NavLink class="nav-link" href="/paintconverter" Match="NavLinkMatch.All">
                <span class="oi oi-brush" aria-hidden="true"></span> Paint Converter
            </NavLink>
            <NavLink class="nav-link" href="/paintinventory" Match="NavLinkMatch.All">
                <span class="oi oi-box" aria-hidden="true"></span> Paint Inventory
            </NavLink>
            <NavLink class="nav-link" href="/myminis" Match="NavLinkMatch.All">
                <span class="oi oi-bookmark" aria-hidden="true"></span> My Minis
            </NavLink>
            <NavLink class="nav-link" href="/miniupload" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span> Add New Mini
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
